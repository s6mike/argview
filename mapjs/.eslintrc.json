{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": "crockford",
  // "extends": "eslint:recommended",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    "__dirname": "readonly",
    "require": "readonly",
    "module": "readonly",
    "window": "readonly",
    "document": "readonly",
    "console": "readonly",
    "process": "readonly"
  },
  "parserOptions": {
        "ecmaVersion": 2018
  },
  "one-var": "consecutive",
  "rules": {
    "strict": [
      "error",
      "function"
    ],
    "semi": [
      "error",
      "always"
    ],
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "no-plusplus": [
      "warn",
      {
        "allowForLoopAfterthoughts": true
      }
    ],
    "quotes": [
      "error",
      "single",
      {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }
    ],
    "new-cap": [
      "error",
      {
        "capIsNewExceptions": [
          "Deferred",
          "Event"
        ]
      }
    ],
    "no-unused-vars": "error",
    "no-const-assign": "error",
    "prefer-const": "error",
    "no-var": "error",
    "comma-dangle": [
      "error",
      "only-multiline"
    ]
  }
}